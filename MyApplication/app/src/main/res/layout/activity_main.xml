<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#999999">

    <TextView
        android:id="@+id/view_number"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="#000000"
        android:text=""
        android:textSize="50sp"
        android:gravity="bottom|right"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:inputType="text"
        android:text="0"
        android:textColor="#000000"
        android:gravity="bottom|right"
        android:textSize="72sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="40sp"
            />
        <Button
            android:id="@+id/btn_clearall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40sp"/>/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BS"
            android:textSize="40sp"/>/>
        <Button
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="40sp"/>/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_number7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="7"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_number8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"/>/>
        <Button
            android:id="@+id/btn_number9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"/>/>
        <Button
            android:id="@+id/btn_multi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:background="#C0C0C0"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:textSize="40sp"/>/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_number4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_number5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>/>
        <Button
            android:id="@+id/btn_number6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>/>
        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40sp"
            android:background="#C0C0C0"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"/>/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_number1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="40sp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"/>
        <Button
            android:id="@+id/btn_number2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>/>
        <Button
            android:id="@+id/btn_number3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40sp"
            android:background="#C0C0C0"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"/>/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_addorsub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="40sp"
            android:background="#C0C0C0"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_number0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"/>/>
        <Button
            android:id="@+id/btn_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="40sp"
            android:background="#ffffff"
            android:layout_marginRight="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp" />/>
        <Button
            android:id="@+id/btn_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="40sp"
            android:background="#C0C0C0"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"/>
        />
    </LinearLayout>

</LinearLayout>